    "concurrently": "^3.6.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.11.8",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "react-router-dom": "^5.2.0",
    "validator": "^9.4.1"
  },
  "devDependencies": {
    "nodemon": "^1.19.4"
  }
